.container{
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 20rpx 0;

}
.header{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-shadow: 0px 2px 10px 0px 
		rgba(203, 203, 203, 0.1);
}
.search{
    width: 620rpx;
    display: flex;
    flex-direction: row;
    margin: 20rpx;
    position: relative;
}
.search > input{
    background-color: #f7f7f7;
    height: 36px;
    width: 620rpx;
    border-radius: 36rpx;
    font-size: 28rpx;
    padding:0 68rpx;
}
.search > image{
    width: 28rpx;
    height: 28rpx;

}
.search > image:first-child{
    position: absolute;
    bottom: 22rpx;
    left: 26rpx;
}
.search > image:last-child{
    position: absolute;
    bottom: 22rpx;
    right: 26rpx;
}
.cancel{
    margin-left: 10rpx;
    color: #666666;
    font-size: 32rpx;
}

.tag-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 40rpx 20rpx;
}
.title{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    color: #010101;
    padding-bottom: 20rpx;
}
.title-icon{
    width: 8rpx;
    height: 28rpx;
    background-color: #000000;
    margin-right: 21rpx;
}

.words{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.word-tag{
    background-color: #f7f7f7;
    padding: 12rpx 22rpx;
    margin: 20rpx 10rpx;
    font-size: 28rpx;
}

.book-container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    margin: 36rpx;
}

.loading-center{
    position: absolute;
    top: 50%;
    left:50%;
}

.loading{
    position: fixed;
    bottom: 2%;
    left: 50%;
}

.emptyBook{
    margin: 0 auto;
    color: #666666;
    font-size: 28rpx;
}
