.container{
    width: 240rpx;
    height: 360rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
    display: flex;
    flex-direction: column;
    position: relative;
    margin-bottom: 48rpx;
}
.img{
    width: 100%;
    height: 100%;
    border-radius: 2px;
}
.description{
    position: absolute;
    background: #fff;
    bottom: 0;
    font-size: 24rpx;
    width: 214rpx;
    display: flex;
    flex-direction: column;
    padding: 5rpx 10rpx 8rpx 16rpx;
}
.title{
    font-size: 24rpx;
    line-height: 48rpx;
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.author{
    font-size: 20rpx;
    color: #999;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.favor{
    color: #666;
    font-size: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    padding-right: 10rpx;
    padding-top: 10rpx;
}