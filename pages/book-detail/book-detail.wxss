.container{
    width:750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f5f5f5;
}
.header{
    width: 750rpx;
    height: 110rpx;
    border-top: 1px #f8f8f8 solid;
    border-bottom: 1px #f8f8f8 solid;
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.search{
    width: 690rpx;
    height: 70rpx;
    background: #f7f7f7;
    border-radius: 45rpx;
    margin: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.search-icon{
    width: 28rpx;
    height: 28rpx;
}
.search-text{
    font-size: 28rpx;
    color: #999;
    padding-left: 10rpx;
}

.book-information{
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    padding: 38rpx 0;
    margin-top: 20rpx;
}
.book-img{
    width: 210rpx;
    height: 310rpx;
    box-shadow: 2px 2px 2px 1px #e9e9e9;
}
.book-title{
    font-size: 38rpx;
    font-weight: normal;
    line-height: 80rpx;
    padding-top: 10rpx;
}
.book-author{
    font-size: 26rpx;
    color: #999;
}

.book-container{
    width: 100%;
    margin-top: 20rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.comments-title,.information-title,.detail-title{
    font-size: 34rpx;
    font-weight: normal;
    padding: 30rpx 0 10rpx;
}
.comments-container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 30rpx 25rpx 16rpx;
}
.comments-tag{
    font-size: 24rpx;
    background: #f7f7f7;
    height: 52rpx;
    border-radius: 31rpx;
    color: #666;
    margin-right: 10rpx;
    line-height: 52rpx;
    padding: 5rpx 26rpx;
    margin-bottom: 20rpx;
}
.comments-tag:nth-child(even){
    background: #fffbdd;
}
.comments-tag:nth-child(odd){
    background: #eefbff;
}
.comments-numbers{
    margin-left: 10rpx;
    font-size: 20rpx;
    color: #bbb;
}

.information-container{
    padding: 30rpx 50rpx 20rpx;
    text-indent: 58rpx;
}
.information-container > text{
    font-size: 28rpx;
    color: #666;
    line-height: 52rpx;
}

.detail-container{
    display: flex;
    flex-direction: column;
    background-color: #fff;
    font-size: 28rpx;
    color: #999;

}
.detail-content{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin: 30rpx 50rpx 100rpx;
}

.detail-text-description{
    padding:0 50rpx;
}
.detail-text{
    display: flex;
    flex-direction: column;
    align-items: baseline;
    color: #666;
    font-size: 28rpx;
}
.detail-text > text , .detail-text-description > text{
    margin-bottom: 10rpx;
    line-height: 36rpx;
}

.post-container{
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
    border-top: 1px #e9e9e9 solid;
}
.post-fake{
    width: 360rpx;
    /* height: 24rpx; */
    border-radius: 36rpx;
    border: 1px #333 solid;
    padding: 10rpx 32rpx;
    margin: 16rpx 26rpx;
}
.post-fake > text{
    font-size: 24rpx;
    color: #010101;
}

.posting-container{
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    /* padding: 20rpx; */
    z-index: 100;
}
.posting-heaner{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-size: 34rpx;
    padding: 35rpx 0rpx;
    border-bottom: 1px #e9e9e9 solid;
}
.posting-heaner > text{
    padding: 0 26rpx;
    color: #999;
}
.posting-tip{
    font-size: 28rpx;
    color: #999;
}
.posted-comments{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-top: 36rpx;
}

.posting-input {
    padding: 20rpx 0 30rpx;
}
.posting-input input{
    width: 693rpx;
    height: 68rpx;
    background: #f5f5f5;
    border-radius: 34rpx;
    padding-left: 32rpx;
}