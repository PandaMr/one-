.container{
    width:750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.header{
    width: 750rpx;
    height: 110rpx;
    border-top: 1px #f8f8f8 solid;
    border-bottom: 1px #f8f8f8 solid;
    position: fixed;
    z-index: 99;
    background: #fff;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.search{
    width: 690rpx;
    height: 70rpx;
    background: #f7f7f7;
    border-radius: 45rpx;
    margin: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.search-icon{
    width: 28rpx;
    height: 28rpx;
}
.search-text{
    font-size: 28rpx;
    color: #999;
    padding-left: 10rpx;
}
.content-container{
    width: 750rpx;
    background: #f9f9f9;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 20rpx;
}
.hot-book{
    width: 120rpx;
    height: 36rpx;
    padding:48rpx 0 36rpx;
}
.book-container{
    width: 690rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    margin: 0 90rpx;
}